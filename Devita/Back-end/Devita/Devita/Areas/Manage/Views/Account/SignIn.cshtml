
@{
    ViewData["Title"] = "SignIn";
    Layout = null;
}
@model AdminSignInViewModel



<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="keywords" content="">
    <meta name="author" content="">
    <meta name="robots" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Fillow : Fillow Saas Admin  Bootstrap 5 Template">
    <meta property="og:title" content="Fillow : Fillow Saas Admin  Bootstrap 5 Template">
    <meta property="og:description" content="Fillow : Fillow Saas Admin  Bootstrap 5 Template">
    <meta property="og:image" content="https://fillow.dexignlab.com/xhtml/social-image.png">
    <meta name="format-detection" content="telephone=no">

    <!-- PAGE TITLE HERE -->
    <title>Admin - Sign in</title>

    <!-- FAVICONS ICON -->
    <link rel="shortcut icon" type="~/manage/image/png" href="~/manage/images/favicon.png">
    <link href="~/manage/css/style.css" rel="stylesheet">

</head>

<body class="vh-100">
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <div class="text-center mb-3">
                                        <a href="index.html"><img src="~/manage/images/logo-full.png" alt=""></a>
                                    </div>
                                    <h4 class="text-center mb-4">Sign in your account</h4>
                                    <form asp-action="signin" method="post">
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>Username</strong></label>
                                            <input asp-for="UserName" class="form-control" placeholder="Username">
                                            @*<span class="text-danger" asp-validation-for="UserName"></span>*@
                                        </div>
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>Password</strong></label>
                                            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                                            @*<span class="text-danger" asp-validation-for="Password"></span>*@
                                        </div>

                                        <div asp-validation-summary="ModelOnly">

                                        </div>
                                        
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary btn-block">Sign Me In</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    <script src="~/manage/vendor/global/global.min.js"></script>
    <script src="~/manage/js/custom.min.js"></script>
    <script src="~/manage/js/dlabnav-init.js"></script>
    <script src="~/manage/js/styleSwitcher.js"></script>
</body>
</html>