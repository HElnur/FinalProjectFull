
@{
    ViewData["Title"] = "OrderContain";
}

@model Order

<div class="content-body">
    <div class="container-fluid">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h4 class="card-title">Setting Datatable</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="display" style="min-width: 845px">
                            <thead>
                                <tr>
                                    <th>Phone</th>
                                    <th>Address</th>
                                    <th>Country</th>
                                    <th>City</th>
                                    <th>Note</th>
                                    <th>Date of shipment</th>

                                </tr>
                            </thead>
                            <tbody>


                                <tr>
                                    <td>@Model.Phone</td>
                                    <td>@Model.Address</td>
                                    <td>@Model.Country</td>
                                    <td>@Model.City</td>
                                    <td>@Model.Note</td>
                                    <td>@Model.CreatedAt</td>


                                </tr>

                            </tbody>
                        </table>

                        <h1 class="text-center mb-4 mt-4" style="font-weight:700">Delivery Status Action</h1>
                        <div class="row mb-3">
                            
                            <div class="col-lg-3">
                                <a asp-action="StatusProcess" asp-controller="order" asp-route-id="@Model.Id" class="btn btn-light">Emalda</a>
                            </div>
                            <div class="col-lg-3">
                                <a asp-action="StatusDepo" asp-controller="order" asp-route-id="@Model.Id" class="btn btn-info">Depoda</a>
                            </div>
                            <div class="col-lg-3">
                                <a asp-action="StatusCourier" asp-controller="order" asp-route-id="@Model.Id" class="btn btn-warning">Kuryerdə</a>
                            </div>
                            <div class="col-lg-3">
                                <a asp-action="StatusDeliver" asp-controller="order" asp-route-id="@Model.Id" class="btn btn-success">Çatdırılmış</a>
                            </div>
                            
                            
                        </div>

                        <h1 style="font-weight:700;" class="text-center mb-3 mt-5"> Order Items </h1>
                        <div class="table-responsive">
                            <table id="example" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>Product Name</th>
                                        <th>SalePrice</th>
                                        <th>CostPrice</th>
                                        <th>DiscountPercent</th>
                                        <th>Count</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        var total = item.Count * (item.DiscountPercent > 0 ? (item.SalePrice * ((100 - item.DiscountPercent) / 100)) : (item.SalePrice));
                                        <tr>
                                            <td>@item.Product.Name</td>
                                            <td>@(item.DiscountPercent>0?(item.SalePrice*(100-item.DiscountPercent)/100).ToString("0.00") : (item.SalePrice).ToString("0.00"))₼</td>
                                            <td>@item.CostPrice₼</td>
                                            <td>@item.DiscountPercent%</td>
                                            <td>@item.Count</td>
                                            <td>@total.ToString("0.00") ₼</td>
                                        </tr>
                                    }

                                </tbody>
                               
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script src="~/manage/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/manage/js/plugins-init/datatables.init.js"></script>
}

