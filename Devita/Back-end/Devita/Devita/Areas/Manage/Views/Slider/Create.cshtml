
@{
    ViewData["Title"] = "Create";
}

@model Slider

<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12 col-xxl-12">
                <form asp-action="create" method="post" enctype="multipart/form-data">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Create new slider</h4>
                        </div>
                        <div class="card-body">
                            <h3>Text</h3>

                            <textarea name="" id="editor" cols="30" rows="10"></textarea>
                            <span asp-validation-for="Text"></span>

                            <div class="form-group mt-4">
                                <label asp-for="BgImageFile" style="font-family: 'Rubik', sans-serif; color: #886CC0; font-weight: 400; font-size: 18px;">Background image</label>
                                <input asp-for="BgImageFile" />
                                <span class="text-danger" asp-validation-for="BgImage"></span>
                            </div>

                            <div class="form-group mt-4">
                                <label asp-for="ImageFile" style="font-family: 'Rubik', sans-serif; color: #886CC0; font-weight: 400; font-size: 18px;">Slider image</label>
                                <input asp-for="ImageFile" />
                                <span class="text-danger" asp-validation-for="ImageFile"></span>
                            </div>

                        </div>

                        <div class="card-footer">
                            <button type="submit">Create</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/32.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}