
@{
    ViewData["Title"] = "Edit";
}

@model Wrapper

<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12 col-xxl-12">
                <form asp-action="edit" method="post" enctype="multipart/form-data">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Edit wrapper</h4>
                        </div>
                        <div class="card-body">



                            <div class="form-group mt-4">
                                <label asp-for="ImageFile1" style="font-family: 'Rubik', sans-serif; color: #4885ED; font-weight: 400; font-size: 20px;">Image 1</label>
                                <input asp-for="ImageFile1" />
                                <span class="text-danger" asp-validation-for="ImageFile1"></span>
                            </div>

                            <div class="img-box">
                                <img src="~/uploads/wrapper/@Model.Image1" width="500"/>
                            </div>

                            <div class="form-group mt-4">
                                <label asp-for="ImageFile2" style="font-family: 'Rubik', sans-serif; color: #4885ED; font-weight: 400; font-size: 20px;">Image 2</label>
                                <input asp-for="ImageFile2" />
                                <span class="text-danger" asp-validation-for="ImageFile2"></span>
                            </div>

                            <div class="img-box">
                                <img src="~/uploads/wrapper/@Model.Image2" width="500"/>
                            </div>


                        </div>

                        <div class="card-footer">
                            <button type="submit" style="background-color: #4885ED; border: none; box-shadow: none; font-family: 'Rubik' , sans-serif; font-weight: 500; font-size: 20px; padding: 8px 10px; border-radius: 0.5rem; color: #FFFFFF;">Edit</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

