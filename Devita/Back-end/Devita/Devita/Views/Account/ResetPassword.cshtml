
@{
    ViewData["Title"] = "ResetPassword";
}

@model ResetPasswordViewModel;


<div id="reset-password">
    <div class='box'>
        <div class='col-1'>

        </div>
        <div class='col-2'>
            <div class='form d-flex align-items-center'>

                <form asp-action="ResetPassword">
                    <div class='form-box'>
                        <input type="hidden" asp-for="Email" value="@Model.Email"/>
                        <label>Password</label>
                        <input asp-for="Password" autocomplete="off" placeholder='Enter password'>

                    </div>

                    <div class='form-box'>
                        <label>Repeat password</label>
                        <input asp-for="RepeatPassword" autocomplete="off" placeholder='Enter repeat password'>

                    </div>
                    
                    <button type="submit">
                        Send
                    </button>
                </form>


            </div>
        </div>
    </div>

</div>

