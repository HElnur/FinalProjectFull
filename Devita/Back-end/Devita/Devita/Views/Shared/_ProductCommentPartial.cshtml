
@model ProductComment

        <div class="star-rating">
            <input type="radio" id="5-stars" form="add-comment" name="rate" value="5" />
            <label for="5-stars" class="star">&#9733;</label>
            <input type="radio" id="4-stars" form="add-comment" name="rate" value="4" />
            <label for="4-stars" class="star">&#9733;</label>
            <input type="radio" id="3-stars" form="add-comment" name="rate" value="3" />
            <label for="3-stars" class="star">&#9733;</label>
            <input type="radio" id="2-stars" form="add-comment" name="rate" value="2" />
            <label for="2-stars" class="star">&#9733;</label>
            <input type="radio" id="1-star" form="add-comment" name="rate" value="1" />
            <label for="1-star" class="star">&#9733;</label>
        </div>
        <span class="text-danger" asp-validation-for="Rate"></span>
        <form asp-action="comment" id="add-comment" class="d-flex justify-content-center flex-column">
            <div class="form-floating">
                <textarea asp-for="Text" cols="55" class="form-control" placeholder="Leave a comment here" id="floatingTextarea" style="border-color: #0363CD;"></textarea>
                <label asp-for="Text" for="floatingTextarea">Your Comments</label>
                <span class="text-danger" asp-validation-for="Text"></span>
                <input type="hidden" asp-for="ProductId" value="@ViewBag.ProductId" />
            </div>


            <button type="submit" class="btn mt-1" style="background-color: #0363CD; color: #FFFFFF; font-family: 'Rubik' , sans-serif; font-weight: 15px;">Send<i class='bx bxl-telegram bx-tada ps-2'></i></button>
        </form>

   