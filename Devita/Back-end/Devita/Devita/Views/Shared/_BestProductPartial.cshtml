@model IEnumerable<Product>
<div class="owl-carousel owl-theme owl-carousel-best">

    @foreach (var items in Model.Chunk(2))
    {
        <div class="item">
            <div class="product">
                @{
                    var i = 0;
                }
                @foreach (var item in items)
                {
                    if (i == 0)
                    {
                        <div class="top-product">
                            <div class="content d-flex">
                                <div class="card-image" style="width: 40%;">
                                    <img class="image" width="50%" height="80%"
                                         src="~/uploads/products/@item.ProductImages.FirstOrDefault(x => x.PosterStatus==true)?.Image" alt="">
                                    <img class="hover-image" width="50%" height="80%"
                                         src="~/uploads/products/@item.ProductImages.FirstOrDefault(x => x.PosterStatus==false)?.Image" alt="">
                                    <div class="modal-discount d-flex justify-content-between align-items-center position-absolute">
                                        @if (item.DiscountPercent > 0)
                                        {
                                            <span>-@item.DiscountPercent.ToString("#")%</span>

                                        }

                                    
                                    </div>
                                </div>

                                <div class="card-text">
                                    <div class="content">
                                        <div class="tags">
                                            @*<a href="#">Headphone</a>*@
                                        </div>

                                        <div class="product-name">
                                            <h3>@item.Name</h3>
                                        </div>

                                        <div class="price">
                                            @if (item.DiscountPercent > 0)
                                            {
                                                <span>$@((item.SalePrice * (1 - item.DiscountPercent/100)).ToString("#.00"))</span>

                                            }
                                            else
                                            {
                                                <span>$@item.SalePrice.ToString("#.00")</span>
                                            }
                                        </div>

                                        <div class="add-cart-wishlist">
                                            <a asp-action="addbasket" asp-controller="product" asp-route-prodId="@item.Id" class="single-btn add-basket add-cart">ADD TO CART</a>
                                            <a href="#" class="wishlist"><i class='bx bx-heart'></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    else
                    {
                        <div class="bottom-product">
                            <div class="content d-flex">
                                <div class="card-image" style="width: 40%;">
                                    <img class="image" width="50%" height="80%"
                                         src="~/uploads/products/@item.ProductImages.FirstOrDefault(x => x.PosterStatus==true)?.Image" alt="">
                                    <img class="hover-image" width="50%" height="80%"
                                         src="~/uploads/products/@item.ProductImages.FirstOrDefault(x => x.PosterStatus==false)?.Image" alt="">
                                    <div class="modal-discount d-flex justify-content-between align-items-center position-absolute">
                                        @if (item.DiscountPercent > 0)
                                        {
                                            <span>-@item.DiscountPercent.ToString("#")%</span>

                                        }

                                     
                                    </div>
                                </div>

                                <div class="card-text">
                                    <div class="content">
                                        <div class="tags">
                                            <a href="#">Headphone</a>
                                        </div>

                                        <div class="product-name">
                                            <h3>@item.Name</h3>
                                        </div>

                                        <div class="price">
                                            @if (item.DiscountPercent > 0)
                                            {
                                                <span>$@((item.SalePrice * (1 - item.DiscountPercent/100)).ToString("#.00"))</span>

                                            }
                                            else
                                            {
                                                <span>$@item.SalePrice.ToString("#.00")</span>
                                            }
                                        </div>

                                        <div class="add-cart-wishlist">
                                            <a asp-action="addbasket" asp-controller="product" asp-route-prodId="@item.Id" class="single-btn add-basket add-cart">ADD TO CART</a>
                                            <a href="#" class="wishlist"><i class='bx bx-heart'></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }



            </div>
        </div>
    }
</div>
