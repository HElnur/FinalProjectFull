@model List<Product> 
<div class="container">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-2 col-md-4 col-sm-6 product mx-2">
                <div class="top-product">
                    <div class="content">
                        <div class="card-image">
                            <img class="image" src="/assets/image/@item.ProductImages.FirstOrDefault(x => x.PosterStatus==true)?.Image" alt="">
                            <img class="hover-image" src="/assets/image/@item.ProductImages.FirstOrDefault(x => x.PosterStatus==false)?.Image"
                                 alt="">
                            <div class="modal-discount d-flex justify-content-between align-items-center position-absolute">

                                <span style="left: 20px; position: absolute;">-11%</span>
                                <button style="left:130px;" type="button"
                                        class="btn p-0 position-absolute" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-text">
                            <div class="tags">
                                <a href="#">
                                    Accessories,
                                </a>

                                <a href="#">
                                    KeyBoard,
                                </a>

                                <a href="#">
                                    Mouse
                                </a>
                            </div>

                            <div class="product-name">
                                <a href="#">Aliquam lobortis</a>
                            </div>

                            <div class="product-price">
                                <span class="price">
                                    <span class="currency">$</span>
                                    111.00
                                </span>

                                <span class="disc-price">
                                    <span class="currency">$</span>
                                    99.00
                                </span>
                            </div>
                        </div>

                        <div class="hover-info">
                            <div class="stars">
                                <span>
                                    <i class='bx bx-star'></i><i class='bx bx-star'></i><i class='bx bx-star'></i><i class='bx bx-star'></i><i class='bx bx-star'></i>
                                </span>
                            </div>

                            <div class="product-desc text-center">
                                <p>
                                    Lorem ipsum dolor sit amet consectetur adipisicing elit.
                                    Nemo saepe voluptatem aspernatur fugit.
                                </p>
                            </div>

                            <div class="buttons">
                                <a href="#">
                                    <i class='bx bx-heart'></i>
                                </a>

                                <a asp-action="addbasket" asp-controller="product" asp-route-prodId="@item.Id" class="single-btn add-basket">
                                    ADD TO CARD
                                </a>

                                <a href="#">
                                    <i class='bx bx-slider'></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>