
@model IEnumerable<Product>


<div class="owl-carousel owl-theme">

    @foreach (var items in Model.Chunk(2))
    {
        <div class="item">
            <div class="product">
                @{
                    var i = 0;
                }
                @foreach (var item in items)
                {
                    @if (i == 0)
                    {
                        <div class="top-product">
                            <div class="content">
                                <a asp-controller="product" asp-action="detail" asp-route-id="@item.Id">
                                    <div class="card-image">
                                        <img class="image" src="/assets/image/@item.ProductImages.FirstOrDefault(x => x.PosterStatus==true)?.Image" alt="">
                                        <img class="hover-image" src="/assets/image/@item.ProductImages.FirstOrDefault(x => x.PosterStatus==false)?.Image"
                                             alt="">
                                        <div class="modal-discount d-flex justify-content-between align-items-center position-absolute">

                                            @if (item.DiscountPercent > 0)
                                            {
                                                <span style="left: 20px; position: absolute;">-@item.DiscountPercent.ToString("#")%</span>
                                            }
                                            <button style="left:190px;" type="button"
                                                    class="btn p-0 position-absolute"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#exampleModal">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="card-text">
                                        <div class="tags">
                                            <a href="#">
                                                Accessories,
                                            </a>

                                            <a href="#">
                                                KeyBoard,
                                            </a>

                                            <a href="#">
                                                Mouse
                                            </a>
                                        </div>

                                        <div class="product-name">
                                            <a href="#">@item.Name</a>
                                        </div>

                                        <div class="product-price">
                                            @if (item.DiscountPercent > 0)
                                            {
                                                <span class="price">
                                                    <span class="currency">$</span>
                                                    @item.SalePrice.ToString("#.00")
                                                </span>

                                                <span class="disc-price">
                                                    <span class="currency">$</span>
                                                    @((item.SalePrice * (1 - item.DiscountPercent/100)).ToString("#.00"))
                                                </span>
                                            }

                                            else
                                            {
                                                <span class="disc-price">
                                                    <span class="currency">$</span>
                                                    @item.SalePrice.ToString("#.00")
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </a>

                                <div class="hover-info">
                                    <div class="stars">
                                        <span>
                                            <i class='bx bx-star'></i><i class='bx bx-star'></i><i class='bx bx-star'></i><i class='bx bx-star'></i><i class='bx bx-star'></i>
                                        </span>
                                    </div>

                                    <div class="product-desc text-center">
                                        <p>
                                            @item.Description
                                        </p>
                                    </div>

                                    <div class="buttons">
                                        <a href="#">
                                            <i class='bx bx-heart'></i>
                                        </a>

                                        <a asp-action="addbasket" asp-controller="product" asp-route-prodId="@item.Id" class="single-btn add-basket">
                                            ADD TO CARD
                                        </a>

                                        <a href="#">
                                            <i class='bx bx-slider'></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        i += 1;
                    }
                    else
                    {
                        <div class="bottom-slider">
                            <div class="content">
                                <a asp-controller="product" asp-action="detail" asp-route-id="@item.Id">
                                    <div class="card-image">
                                        <img src="/assets/image/@item.ProductImages.FirstOrDefault(x => x.PosterStatus==true)?.Image" alt="">
                                        <img class="hover-image" src="/assets/image/@item.ProductImages.FirstOrDefault(x => x.PosterStatus==false)?.Image"
                                             alt="">
                                        <div class="modal-discount d-flex justify-content-between align-items-center position-absolute">

                                            @if (item.DiscountPercent > 0)
                                            {
                                                <span style="left: 20px; position: absolute;">-@item.DiscountPercent.ToString("#")%</span>
                                            }

                                            <button style="left:190px;" type="button"
                                                    class="btn p-0 position-absolute" data-bs-toggle="modal"
                                                    data-bs-target="#exampleModal">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="card-text">
                                        <div class="tags">
                                            <a href="#">
                                                Accessories,
                                            </a>

                                            <a href="#">
                                                KeyBoard,
                                            </a>

                                            <a href="#">
                                                Mouse
                                            </a>
                                        </div>

                                        <div class="product-name">
                                            <a href="#">@item.Name</a>
                                        </div>

                                        <div class="product-price">
                                            @if (item.DiscountPercent > 0)
                                            {
                                                <span class="price">
                                                    <span class="currency">$</span>
                                                    @item.SalePrice.ToString("#.00")
                                                </span>

                                                <span class="disc-price">
                                                    <span class="currency">$</span>
                                                    @((item.SalePrice * (1 - item.DiscountPercent/100)).ToString("#.00"))
                                                </span>
                                            }

                                            else
                                            {
                                                <span class="disc-price">
                                                    <span class="currency">$</span>
                                                    @item.SalePrice.ToString("#.00")
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </a>

                                <div class="hover-info">
                                    <div class="stars">
                                        <span>
                                            <i class='bx bx-star'></i><i class='bx bx-star'></i><i class='bx bx-star'></i><i class='bx bx-star'></i><i class='bx bx-star'></i>
                                        </span>
                                    </div>

                                    <div class="product-desc text-center">
                                        <p>
                                            @item.Name
                                        </p>
                                    </div>

                                    <div class="buttons">
                                        <a href="#">
                                            <i class='bx bx-heart'></i>
                                        </a>

                                        <a asp-action="addbasket" asp-controller="product" asp-route-prodId="@item.Id" class="single-btn add-basket">
                                            ADD TO CARD
                                        </a>

                                        <a href="#">
                                            <i class='bx bx-slider'></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                }
            </div>
        </div>
    }
</div>
